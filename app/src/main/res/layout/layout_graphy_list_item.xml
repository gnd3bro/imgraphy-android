<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true">

    <soup.neumorphism.NeumorphImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/Neumorphism.ImageView"
        app:neumorph_strokeColor="@color/neumorphism.Background"
        app:neumorph_strokeWidth="@dimen/neumorphism_stroke"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--TODO: Neumorphism Library Bug-->
    <!--Soup's Neumorphism Library has performance issue with recycle view-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/neumorphism_padding"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ListItemImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_image"
            android:contentDescription="thumbnail"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/neumorphism_info_bar_size"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/ListItemImage">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_share" />

            <TextView
                android:id="@+id/ListItemShareCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/ui_count"
                android:textColor="@color/neumorphism.Stroke"
                android:textAppearance="@style/Font.Description"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_like"/>

            <TextView
                android:id="@+id/ListItemFavCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ui_count"
                android:textColor="@color/neumorphism.Stroke"
                android:textAppearance="@style/Font.Description"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/neumorphism.Accent</item>
        <item name="colorPrimaryDark">@color/neumorphism.Accent</item>
        <item name="colorAccent">@color/neumorphism.Accent</item>
        <item name="android:windowBackground">@color/neumorphism.Background</item>
        <item name="android:navigationBarColor">@color/neumorphism.Background</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
